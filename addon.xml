<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.m3utostrm"
       name="M3U to STRM Processor"
       version="2.0.0"
       provider-name="Boc">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Processes M3U playlists and Xtream API logins into STRM files for Kodi</summary>
        <description lang="en">This addon downloads M3U playlists and converts them into STRM files for Kodi to use with its library.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <settings>
            <setting file="resources/settings.xml" />
        </settings>
    </extension>
</addon>
